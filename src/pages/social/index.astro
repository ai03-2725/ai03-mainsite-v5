---
import Layout from '../../layouts/DefaultLayout.astro';

import CardDiscord from '@components/single-use/social/card-discord.astro'
import SocialLinksList from '@components/astro/SocialLinksList.astro';

---

<Layout 
  title="Socials"
	description="Places to follow ai03's works and progress."
>
	<div class="container mx-auto pt-12 px-4 md:px-0">
		<div class="w-full text-center pb-6">
			<h1 class="text-[32px] lg:text-[38px] font-[575] mb-1">Socials</h1>
		</div>

		<div class="flex flex-row justify-center items-center pb-12 text-zinc-700 gap-4 flex-wrap px-6">
			<SocialLinksList size={42} />			
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<CardDiscord />
		</div>
	</div>
</Layout>
